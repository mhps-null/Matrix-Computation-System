<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="parent" prefHeight="750.0" prefWidth="750.0"
            stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="algeo.MatrixJavaFX">

   <children>
      <HBox alignment="CENTER"
            AnchorPane.topAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <Label text="Baris" />
                              <TextField fx:id="barisField" alignment="CENTER" prefWidth="50.0" />
                           </children>
                        </VBox>

                        <Label text="X" />

                        <VBox alignment="CENTER">
                           <children>
                              <Label text="Kolom" />
                              <TextField fx:id="kolomField" alignment="CENTER" prefWidth="50.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <Button fx:id="GenMtrxBtn" mnemonicParsing="false"
                          onAction="#genMtrx"
                          text="Generate Matrix" />
               </children>
            </VBox>
         </children>
      </HBox>

      <Button alignment="CENTER"
              layoutX="650.0" layoutY="50.0"
              mnemonicParsing="false"
              onAction="#switchToMenu"
              text="Back"
              styleClass="small-button" />
   </children>
</AnchorPane>